{
  "name": "@centrifuge/fabric",
  "version": "1.0.5",
  "description": "Fabric Component Library",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn build:icons && tsc",
    "prepare": "yarn build",
    "bump": "standard-version --sign",
    "storybook": " yarn build:icons --ignore-existing && start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build:icons": "svgr --template ./iconTemplate.js -d ./src/icon ./src/icon-svg",
    "lint": "eslint src",
    "test": "loki test || (yarn test:report && open .loki/report.html)",
    "approve": "loki approve",
    "start": "tsc --watch",
    "ci:loki": "build-storybook --quiet && loki --requireReference --reactUri file:./storybook-static",
    "test:report": "yarn test:report:json && yarn test:report:html",
    "test:report:json": "node .loki/createReportJson.js",
    "test:report:html": "reg-cli --from .loki/report.json --report .loki/report.html"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@mdx-js/preact": "^2.1.1",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.4.18",
    "@storybook/addon-docs": "^6.4.18",
    "@storybook/addon-essentials": "^6.4.18",
    "@storybook/addon-links": "^6.4.18",
    "@storybook/builder-vite": "^0.1.34",
    "@storybook/react": "^6.4.18",
    "@svgr/cli": "^5.5.0",
    "@types/babel__core": "^7",
    "@types/eslint": "^7",
    "@types/mdx-js__react": "^1",
    "@types/prettier": "^2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/styled-components": "^5",
    "@types/styled-system__css": "^5.0.16",
    "@types/styled-system__should-forward-prop": "^5",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "babel-loader": "8.1.0",
    "csstype": "^3.0.9",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "install-peers-cli": "^2.2.0",
    "loki": "^0.28.1",
    "prettier": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reg-cli": "^0.17.4",
    "standard-version": "^9.3.2",
    "styled-components": "^5.3.6",
    "typescript": "~4.4.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "styled-components": "*"
  },
  "dependencies": {
    "@polkadot/react-identicon": "^2.2.1",
    "@react-aria/button": "^3.3.4",
    "@react-aria/dialog": "^3.1.4",
    "@react-aria/focus": "^3.5.0",
    "@react-aria/overlays": "^3.7.2",
    "@react-aria/select": "^3.6.0",
    "@react-aria/tooltip": "^3.1.7",
    "@react-stately/tooltip": "^3.0.8",
    "@styled-system/css": "^5.1.5",
    "@styled-system/should-forward-prop": "^5.1.5",
    "@types/styled-system": "^5.1.15",
    "styled-system": "^5.1.5"
  },
  "svgr": {
    "dimensions": false,
    "typescript": true,
    "replaceAttrValues": {
      "black": "currentcolor",
      "#000": "currentcolor"
    }
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      }
    }
  }
}
