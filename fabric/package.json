{
  "name": "@centrifuge/fabric",
  "version": "0.0.2",
  "description": "Fabric Component Library",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "yarn build:icons && tsc",
    "prepare": "yarn build",
    "bump": "standard-version",
    "storybook": "yarn build:icons --ignore-existing && start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build:icons": "svgr --template ./iconTemplate.js -d ./src/icon ./src/icon-svg",
    "lint": "eslint src",
    "test": "loki test",
    "approve": "loki approve",
    "start": "tsc --watch",
    "ci:loki": "build-storybook --quiet && loki --requireReference --reactUri file:./storybook-static"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@svgr/cli": "^5.5.0",
    "@types/babel__core": "^7",
    "@types/eslint": "^7",
    "@types/mdx-js__react": "^1",
    "@types/prettier": "^2",
    "@types/react": "^17.0.21",
    "@types/styled-components": "^5.1.4",
    "@types/styled-system": "^5",
    "@types/styled-system__css": "^5.0.16",
    "@types/styled-system__should-forward-prop": "^5",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "babel-loader": "^8.2.2",
    "csstype": "^3.0.9",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "loki": "^0.28.1",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.2",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "react": ">=16.13.1",
    "react-dom": ">=16.13.1",
    "styled-components": "^5.1.1"
  },
  "dependencies": {
    "@styled-system/css": "^5.1.5",
    "@styled-system/should-forward-prop": "^5.1.5",
    "styled-system": "^5.1.5"
  },
  "svgr": {
    "dimensions": false,
    "typescript": true,
    "replaceAttrValues": {
      "black": "currentcolor",
      "#000": "currentcolor"
    }
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      }
    }
  }
}
