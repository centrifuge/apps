{
  "name": "@centrifuge/nft-studio",
  "private": true,
  "scripts": {
    "start": "yarn build:deps && yarn start:dev",
    "start:dev": "SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:deps": "cd ../fabric && yarn build && cd ../fabric",
    "lint": "eslint -c .eslintrc.js '*/**/*.{js,ts,tsx}'",
    "lint-fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@centrifuge/fabric": "workspace:*",
    "@polkadot/api": "^6.2.1",
    "@polkadot/extension-dapp": "^0.40.3",
    "@polkadot/react-identicon": "^0.85.4",
    "@polkadot/util-crypto": "^7.4.1",
    "@styled-system/css": "^5.1.5",
    "@styled-system/should-forward-prop": "^5.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.25.1",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.1",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17",
    "@types/react-router": "^5",
    "@types/react-router-dom": "^5",
    "@types/styled-components": "^5",
    "@types/styled-system": "^5",
    "@types/styled-system__css": "^5.0.16",
    "@types/styled-system__should-forward-prop": "^5",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.21.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 2 chrome versions",
      "last 2 firefox versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "resolutions": {
    "styled-components": "^5"
  }
}
