{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "noImplicitAny": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "outDir": "build",
      "declaration": true,
      "declarationDir": "./dist",
      "strictNullChecks": true,
      "esModuleInterop": true,
      "lib": [
        "es2015"
      ],
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "typings"
    ]
  }