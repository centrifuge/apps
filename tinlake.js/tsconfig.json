{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": true,
    "declarationDir": "./dist",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/abi/*.abi.json",
    "src/abi/test/*.abi.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
