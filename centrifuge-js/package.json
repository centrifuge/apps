{
  "name": "@centrifuge/centrifuge-js",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/centrifuge-js.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "run-p -l start:esbuild start:types",
    "start:esbuild": "node ./esbuild watch",
    "start:types": "tsc --watch --emitDeclarationOnly --outDir dist",
    "build": "yarn clean && yarn build:esbuild && yarn build:types",
    "build:esbuild": "node ./esbuild",
    "build:types": "yarn generate:polkadot-types && tsc --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "test": "jest",
    "test2": "node --experimental-vm-modules node_modules/jest/bin/jest",
    "lint": "eslint src/**/*.ts",
    "generate:polkadot-types": "yarn generate:defs && yarn generate:meta",
    "generate:defs": "ts-node --skip-project ../node_modules/.bin/polkadot-types-from-defs --package centrifuge-js/interfaces --input ./src/interfaces --endpoint ./centrifuge-dev.json",
    "generate:meta": "ts-node --skip-project ../node_modules/.bin/polkadot-types-from-chain --package centrifuge-js/interfaces --endpoint ./centrifuge-dev.json --output ./src/interfaces",
    "generate:fetch": "yarn wscat -c wss://fullnode-collator.development.cntrfg.com -x '{\"id\":\"1\", \"jsonrpc\":\"2.0\", \"method\": \"state_getMetadata\", \"params\":[]}' > ./centrifuge-dev.json"
  },
  "dependencies": {
    "@polkadot/api": "6.9.1",
    "@polkadot/util-crypto": "7.9.2",
    "bn.js": "^5.2.0",
    "decimal.js-light": "^2.5.1"
  },
  "devDependencies": {
    "@polkadot/typegen": "6.9.1",
    "@types/bn.js": "^5",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "esbuild": "^0.14.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.3",
    "npm-run-all": "4.1.5",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "wscat": "^5.1.0"
  }
}
