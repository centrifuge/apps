{
  "name": "@centrifuge/tinlake-bot",
  "private": true,
  "version": "1.0.0",
  "description": "Tinlake pool automation bot",
  "main": "bin/index.js",
  "types": "bin/index.d.ts",
  "scripts": {
    "start": "yarn build:deps && ts-node-dev src/index.ts",
    "start:prod": "node bin/index.js",
