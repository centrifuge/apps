    "build:deps": "cd ../tinlake.js && yarn build && cd ../tinlake-bot"
  },
  "dependencies": {
    "@centrifuge/tinlake-js": "workspace:*",
    "@ethersproject/experimental": "^5.0.9",
    "@vercel/fetch-retry": "^5.0.3",
    "bignumber.js": "^9.0.0",
    "cron": "^1.8.2",
    "ethers": "5.0.23",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/cron": "^1",
    "@types/node": "^14.14.10",
    "@types/node-fetch": "^2",
    "prettier": "1.19.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "ts-node": "9.0.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "4.1.2"
  }
}
