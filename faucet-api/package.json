{
  "name": "faucet-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "start:types": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --watch",
    "start:functions": "npx functions-framework --target=faucet --signature-type=http --env-vars-file .env.yaml",
    "develop": "run-p -l start:functions start:types",
    "deploy": "gcloud functions deploy faucet --region=us-central1 --source=dist --project=centy-test  --trigger-http --runtime=nodejs16 --env-vars-file .env.yaml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@centrifuge/centrifuge-js": "workspace:centrifuge-js",
    "@google-cloud/firestore": "^6.0.0",
    "@google-cloud/functions-framework": "^3.1.2",
    "@polkadot/api": "^9.3.3",
    "@polkadot/keyring": "^10.1.7",
    "bn.js": "^5.2.1",
    "dotenv": "^16.0.2",
    "rxjs": "^7.5.6"
  },
  "devDependencies": {
    "@types/bn.js": "^5",
    "@types/eslint": "^8",
    "@types/node": "^18.7.16",
    "esbuild": "^0.15.8",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.23.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.8.3"
  }
}
