{
  "name": "faucet-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build",
    "start:types": "tsc --watch",
    "start:server": "nodemon dist/index.js",
    "start:functions": "npx functions-framework --target=faucet",
    "start": "tsc && run-p -l start:types start:server start:functions",
