    "@polkadot/api": "^9.3.3",
    "@polkadot/keyring": "^10.1.7",
    "bn.js": "^5.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "esbuild": "^0.15.8",
    "esbuild-node-externals": "^1.5.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "rxjs": "^7.5.6"
  },
