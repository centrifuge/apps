{
  "private": true,
  "workspaces": [
    "fabric",
    "tinlake-bot",
    "e2e-tests",
    "onboarding-api",
    "onboarding-app",
    "tinlake-ui",
    "tinlake.js",
    "centrifuge-js",
    "centrifuge-app",
    "gateway",
    "gateway/packages/lib",
    "gateway/packages/ui",
    "gateway/packages/server",
    "simulation-tests",
    "onboarding-ui",
    "faucet-api"
  ],
  "devDependencies": {
    "@types/concurrently": "^5",
    "babel-plugin-styled-components": "1.12.0",
    "concurrently": "^5.3.0",
    "husky": "^6.0.0",
    "prettier": "^2.3.1",
    "prettier-plugin-organize-imports": "1.1.1",
    "pretty-quick": "^3.1.1",
    "ts-node": "9.0.0",
    "typescript": "~4.4.4"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.6.2",
    "bn.js": "5.1.3",
    "dotenv": "8.2.0",
    "ethers": "5.4.7"
  },
  "scripts": {
    "format:run": "cd $INIT_CWD && prettier --write \"./**/*.{ts,tsx}\"",
    "format:check": "cd $INIT_CWD && prettier --check \"./**/*.{ts,tsx}\"",
    "publish:develop": "yarn workspaces foreach run prepublish && lerna publish --canary --preid develop.$(git rev-parse --short HEAD) --yes --force-publish",
    "onboarding-api": "yarn workspace @centrifuge/onboarding-api start",
    "onboarding-ui": "yarn workspace @centrifuge/onboarding-ui start",
    "tinlake-ui": "yarn workspace @centrifuge/tinlake-ui start",
    "start": "concurrently --kill-others-on-fail \"yarn onboarding-api\" \"yarn onboarding-ui\" \"yarn tinlake-ui\" -p name -n \"onboarding-api,onboarding-ui,tinlake-ui\"",
    "postinstall": "npx husky install"
  },
  "resolutions": {
    "typescript": "~4.4.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "@types/react": "^17.0.30",
    "@types/eslint": "7.28.0"
  }
}
