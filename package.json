{
  "name": "centrifuge-gateway",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@centrifuge/gateway-server": "file:packages/server",
    "@centrifuge/gateway-lib": "file:packages/lib",
    "@centrifuge/gateway-ui": "file:packages/ui"
  },
  "scripts": {
    "start:prod": "nodemon",
    "bootstrap": "lerna bootstrap",
    "pretest": "lerna run build --scope @centrifuge/gateway-lib",
    "test": "cross-env CI=true lerna run test --parallel",
    "start": "cross-env  lerna run start --parallel",
    "build": "lerna run build --parallel",
    "postbuild": "rm -rf ./build && mv packages/ui/build .",
    "postinstall": "npm run bootstrap"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@nestjs/testing": "^5.7.4",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/jest": "^24.0.9",
    "@types/nedb": "1.8.6",
    "@types/node": "^10.12.10",
    "@types/passport-http": "^0.3.6",
    "@types/react-redux": "^6.0.10",
    "@types/react-router": "^4.3.1",
    "@types/supertest": "^2.0.5",
    "@types/web3": "^1.0.12",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.4",
    "lerna": "^3.10.7",
    "nodemon": "^1.18.7",
    "prettier": "^1.14.2",
    "prop-types": "^15.7.2",
    "react-test-renderer": "^16.9.0",
    "supertest": "^3.1.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "proxy": "http://localhost:3002"
}
